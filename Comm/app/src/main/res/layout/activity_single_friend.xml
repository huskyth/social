<RelativeLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:padding="10sp"      
  >
  <ImageView 
       android:background="@drawable/single_friend_background"
       android:layout_width="200sp"
       android:layout_height="200sp"
       android:layout_centerInParent="true"
       android:alpha="150"
      />
      <TextView 
          android:layout_marginTop="50sp"
             android:id="@+id/single_friend_name"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:textSize="15sp"
             android:padding="8sp"
             android:textColor="#000000"
             android:gravity="center_horizontal"
        />
       <TextView 
            android:layout_marginTop="20sp"
             android:id="@+id/single_friend_phone"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:textSize="15sp"
             android:padding="8sp"
             android:layout_below="@id/single_friend_name"
             android:textColor="#000000"
             android:gravity="center_horizontal"
        />
      	<Button 
      	     android:layout_marginTop="20sp"
      	     android:layout_width="60sp"
             android:layout_height="30sp"
       		  android:onClick="Care"
             android:layout_below="@id/single_friend_phone"
             android:background="@drawable/care_or_notcare"
             android:layout_centerHorizontal="true"
             android:id="@+id/care_btn"
      	    />
    
    
    
</RelativeLayout>