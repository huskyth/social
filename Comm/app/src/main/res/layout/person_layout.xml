<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:layout_below="@id/rl_top"
        android:background="#C6C8AC" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="30sp">

        <TextView
            android:id="@+id/tv_tempname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="昵称" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <ImageView
                android:id="@+id/myphoto"
                android:layout_width="90sp"
                android:layout_height="90sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:background="@drawable/logo" />

            <LinearLayout
                android:id="@+id/blue_line"
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_below="@id/rl_care_and_iscare"
                android:layout_marginTop="15sp"
                android:background="#00CCFF"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:id="@+id/gray_line"
                android:layout_width="match_parent"
                android:layout_height="1.8sp"
                android:layout_below="@id/share_rl"
                android:layout_marginTop="10sp"
                android:background="#C6C8AC"
                android:orientation="vertical"></LinearLayout>


            <RelativeLayout
                android:id="@+id/write_rl"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@id/blue_line"

                android:layout_marginTop="10sp">

                <Button
                    android:id="@+id/write"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/iv_icon_write"
                    android:background="@drawable/btn_selector_rec"
                    android:gravity="left"
                    android:onClick="writeCircle"
                    android:paddingLeft="5sp"
                    android:paddingTop="8.5sp"
                    android:text="我要写圈子"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon_write"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/write" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/friend_rl"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@id/write_rl">

                <Button
                    android:id="@+id/getFriends"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/iv_icon_friend"
                    android:background="@drawable/btn_selector_rec"
                    android:gravity="left"
                    android:onClick="myFriend"
                    android:paddingLeft="5sp"
                    android:paddingTop="8.5sp"
                    android:text="我的朋友"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon_friend"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/friend"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/judge_rl"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@id/friend_rl">

                <Button
                    android:id="@+id/chatGp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/iv_icon_judge"
                    android:background="@drawable/btn_selector_rec"
                    android:gravity="left"
                    android:onClick="myGroupChat"
                    android:paddingLeft="5sp"
                    android:paddingTop="8.5sp"
                    android:text="我的群聊"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon_judge"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/judge" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share_rl"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@id/judge_rl">

                <Button
                    android:id="@+id/writeBack"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/iv_icon_share"
                    android:background="@drawable/btn_selector_rec"
                    android:gravity="left"
                    android:onClick="EnterBack"
                    android:paddingLeft="5sp"
                    android:paddingTop="8.5sp"
                    android:text="意见反馈"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon_share"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/my_care" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_care_and_iscare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/myphoto"
                android:layout_centerHorizontal="true"
                android:paddingTop="10sp">

                <TextView
                    android:id="@+id/tv_care_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_care"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_care_num"
                    android:text="关注" />

                <TextView
                    android:id="@+id/tv_iscared_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_care"
                    android:paddingLeft="5sp"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_iscared"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_iscared_num"
                    android:text="粉丝" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/back_rl"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_below="@id/gray_line"
                android:layout_marginTop="10sp">

                <Button

                    android:id="@+id/quit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10sp"
                    android:layout_toRightOf="@id/iv_icon_back"
                    android:background="@drawable/btn_selector_rec"
                    android:gravity="left"
                    android:onClick="QuitLogin"
                    android:paddingLeft="5sp"
                    android:paddingTop="8.5sp"
                    android:text="退出登录"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_icon_back"
                    android:layout_width="20sp"
                    android:layout_height="20sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/back" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
